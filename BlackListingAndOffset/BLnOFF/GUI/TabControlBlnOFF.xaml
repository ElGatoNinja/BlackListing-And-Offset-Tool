<UserControl x:Class="ZOT.BLnOFF.GUI.TabControlBlnOFF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZOT.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="BLDatastyle" TargetType="{x:Type DataGridRow}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedBL}" Value="True">
                    <Setter Property="Background" Value="GreenYellow"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="OFFDatastyle" TargetType="{x:Type DataGridRow}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedOFF}" Value="True">
                    <Setter Property="Background" Value="GreenYellow"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding CandidataBL}" Value="True">
                    <Setter Property="Background" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TabControl Height="auto" Width="auto" >
            <TabItem Header="Inicio">
                <Grid Background="#FFE5E5E5" Height="424" Width="790" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="54*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="RSLTE31_path" HorizontalAlignment="Left" Height="23" Margin="74.3,77,0,0" TextWrapping="Wrap" Text="D:\superbecario\R31.csv" VerticalAlignment="Top" Width="322" MaxLines="1" Grid.Column="1"/>
                    <Button Content="Examinar" HorizontalAlignment="Left" Margin="417.3,77,0,0" VerticalAlignment="Top" Width="75" Click="R31_Click" Grid.Column="1"/>
                    <TextBox x:Name="TA_path" HorizontalAlignment="Left" Height="23" Margin="74.3,123,0,0" TextWrapping="Wrap" Text="D:\superbecario\TA.csv" VerticalAlignment="Top" Width="322" Grid.Column="1"/>
                    <Button Content="Examinar" HorizontalAlignment="Left" Margin="417.3,123,0,0" VerticalAlignment="Top" Width="75" Click="TA_Click" Grid.Column="1"/>
                    <TextBox x:Name="FL18_path" HorizontalAlignment="Left" Height="23" Margin="74.3,213,0,0" TextWrapping="Wrap" Text="D:\superbecario\SRAN.mdb" VerticalAlignment="Top" Width="322" Grid.Column="1"/>
                    <Button Content="Examinar" HorizontalAlignment="Left" Margin="417.3,168,0,0" VerticalAlignment="Top" Width="75" Click="SRAN_Click" Grid.Column="1"/>
                    <TextBox x:Name="SRAN_path" HorizontalAlignment="Left" Height="23" Margin="74.3,168,0,0" TextWrapping="Wrap" Text="D:\superbecario\FL18.mdb" VerticalAlignment="Top" Width="322" Grid.Column="1"/>
                    <Button Content="Examinar" HorizontalAlignment="Left" Margin="417.3,213,0,0" VerticalAlignment="Top" Width="75" Click="FL18_Click" Grid.Column="1"/>
                    <Label Content="RSLTE31:" HorizontalAlignment="Left" Margin="74.3,54,0,0" VerticalAlignment="Top" Width="87" Height="23" Grid.Column="1"/>
                    <Label Content="Timing Advance:" HorizontalAlignment="Left" Margin="74.3,100,0,0" VerticalAlignment="Top" Width="107" Grid.Column="1"/>
                    <Label Content="Export SRAN:" HorizontalAlignment="Left" Margin="74.3,146,0,0" VerticalAlignment="Top" Width="87" Grid.Column="1"/>
                    <Label Content="Export FL18:" HorizontalAlignment="Left" Margin="74.3,192,0,0" VerticalAlignment="Top" Width="87" Grid.Column="1"/>
                    <Button Content="Iniciar" HorizontalAlignment="Left" Height="29" Margin="363.3,331,0,0" VerticalAlignment="Top" Width="129" Click="Launch" Grid.Column="1"/>

                    <DataGrid x:Name="lnBtsVisualGrid" HorizontalAlignment="Left" Height="333" Margin="51,27,0,0" VerticalAlignment="Top" Width="207" AutoGenerateColumns="False" ColumnWidth="*" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="lnBts Name" Binding="{Binding lnBtsName}" CanUserReorder="False" CanUserResize="False" ClipboardContentBinding="{x:Null}" Foreground="#FF878787"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Editar Umbrales" Grid.Column="1" HorizontalAlignment="Left" Margin="205.6,331,0,0" VerticalAlignment="Top" Width="129" Height="29" Click="Constant_Editor"/>
                </Grid>
            </TabItem>
            <TabItem Header="Colindancias">
                <Grid Background="#FFE5E5E5" >
                    <DataGrid HorizontalAlignment="Left" LoadingRow="DataGrid_LoadingRow" Margin="10,10,0,0" VerticalAlignment="Top" Name="colinGrid">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SlectedBL}" Value="True">
                                        <Setter Property="Background" Value="GreenYellow"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>


                </Grid>
            </TabItem>
            <TabItem Header="Candidatas BL">
                <Grid Background="#FFE5E5E5" Margin="0,0,0.4,-2.4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.75*"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0" HorizontalAlignment="Left" LoadingRow="DataGrid_LoadingRow" Margin="10,10,0,0" VerticalAlignment="Top" Name="candBLGrid" RowStyle="{StaticResource BLDatastyle}"/>
                    <Button Grid.Row="1" Content="Generar plantilla BL" HorizontalAlignment="Right" Margin="0,0,30,0" VerticalAlignment="Center" Width="139" Height="27" Click="BL_template_gen"/>
                    <TextBox x:Name="fileNameBL" Grid.Row="1" HorizontalAlignment="Left" Height="23" Margin="50,11.6,0,0" TextWrapping="Wrap" Text="PlantillaBL.csv" VerticalAlignment="Top" Width="285"/>
                </Grid>
            </TabItem>
            <TabItem Header="Candidatas OFF">
                <Grid Background="#FFE5E5E5" Margin="0,0,0.4,-2.4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.75*"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0" HorizontalAlignment="Left" LoadingRow="DataGrid_LoadingRow" Margin="10,10,0,0" VerticalAlignment="Top" Name="candOFFGrid" RowStyle="{StaticResource OFFDatastyle}"/>

                    <Button Grid.Row="1" Content="Generar plantilla OFF" HorizontalAlignment="Right" Margin="0,0,30,0" VerticalAlignment="Center" Width="139" Height="27" Click="OFF_template_gen"/>
                    <TextBox x:Name="fileNameOFF" Grid.Row="1" HorizontalAlignment="Left" Height="23" Margin="50,11.6,0,0" TextWrapping="Wrap" Text="PlantillaOFF.csv" VerticalAlignment="Top" Width="285"/>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</UserControl>
